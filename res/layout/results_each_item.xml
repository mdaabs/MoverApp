<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/results_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Results"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/results_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/results_title"
        android:layout_marginTop="10dp"
        android:text="Mario"
        android:textSize="17dp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/results_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/results_title"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/results_name"
        android:text="(mdaabs22)"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/results_vehicle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/results_name"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:text="Truck"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/results_zip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/results_name"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/results_vehicle"
        android:text="02477"
        android:layout_marginLeft="5dp"
        android:textSize="13dp" />

</RelativeLayout>